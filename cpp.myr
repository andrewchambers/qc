use std
use "err"
use "tok"

pkg qc =
	type pp = struct
		input : tokstream#[:]
	;;
	
	const mkcpp : (ts : tokstream# -> pp#) 
	const cppnext : (pp : pp# -> tok)
;;

const mkcpp = {ts
	var pp
	
	pp = std.mk([.input = [][:]])
	pushts(pp, ts)
	-> pp
}

const cppnext = {pp
	var tok = toknext(pp.input[pp.input.len-1])
	match tok.kind
	| `Teof:
		if pp.input.len > 1
			std.slpop(&pp.input)
			-> cppnext(pp)
		;;
	| _:
	;;
	-> tok
}

const pushts = {pp, ts
	std.slpush(&pp.input, ts)
}
